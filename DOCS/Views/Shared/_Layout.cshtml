<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - XML Documentation Viewer</title>
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="~/Content/font-awesome.min.css" />
	<script src="~/Scripts/DropZone/DropZone.js"></script>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top navbar-left">
		<div>
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Document List", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Upload", "Upload", "Home")</li>
				</ul>
			</div>
		</div>
	</div>
	<div style="position:fixed; overflow:auto; width:100vw;">
		@RenderBody()
	</div>
	@RenderSection("scripts", required: false)
</body>
</html>